{
    "name": "bgs-starter-kit",
    "displayName": "BGS Starter Kit ðŸš€",
    "description": "Quickstart for installing tools & adjusting settings to comply with dev workflow at BrightGauge Software",
    "version": "1.0.0",
    "publisher": "josecartagena",
    "icon": "images/bg-pie-logo.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/zaydion/BGS-Starter-Kit.git"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "categories": [
        "Extension Packs"
    ],
    "extensionDependencies": [
        "dbaeumer.vscode-eslint",
        "dsznajder.es7-react-js-snippets",
        "dzannotti.vscode-babel-coloring",
        "eamodio.gitlens",
        "Equinusocio.vsc-material-theme",
        "esbenp.prettier-vscode",
        "karunamurti.haml",
        "ms-python.python",
        "msjsdiag.debugger-for-chrome",
        "PKief.material-icon-theme"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "BGS Strater Kit - configurations",
            "properties": {
                "editor.tabSize": {
                    "type": "integer",
                    "default": 2,
                    "description": "Number of spaces it should use per tab"
                },
                "editor.renderWhitespace": {
                    "type": "string",
                    "default": "all",
                    "description": "Render white spaces"
                },
                "files.trimTrailingWhitespace": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remove white spaces on save"
                },
                "files.trimFinalNewlines": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remove new lines from end of file"
                },
                "files.insertFinalNewline": {
                    "type": "boolean",
                    "default": true,
                    "description": "Add a new line at the end of file"
                },
                "javascript.format.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable javascript formatting"
                },
                "[javascript]": {
                    "type": "object",
                    "title": "JavaScript settings",
                    "properties": {
                        "editor.rulers": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "default": [
                                99
                            ],
                            "description": "List of editor rulers for javascript"
                        }
                    }
                },
                "python.linting.pylintEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable pylint linter"
                },
                "python.linting.flake8Enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable flake8 linter"
                },
                "python.linting.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable python linting"
                },
                "[python]": {
                    "type": "object",
                    "title": "Python settings",
                    "properties": {
                        "editor.tabSize": {
                            "type": "integer",
                            "default": 4
                        },
                        "editor.formatOnSave": {
                            "type": "boolean",
                            "default": false
                        },
                        "editor.rulers": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            },
                            "default": [
                                79,
                                119
                            ],
                            "description": "List of editor rulers for python"
                        }
                    }
                },
                "gitlens.advanced.messages": {
                    "type": "object",
                    "properties": {
                        "suppressShowKeyBindingsNotice": {
                            "type": "boolean",
                            "deafult": true
                        }
                    }
                },
                "gitlens.historyExplorer.enabled": {
                    "type": "boolean",
                    "default": true
                },
                "prettier.eslintIntegration": {
                    "type": "boolean",
                    "default": true
                },
                "prettier.semi": {
                    "type": "boolean",
                    "default": false
                },
                "prettier.singleQuote": {
                    "type": "boolean",
                    "default": true
                },
                "prettier.trailingComma": {
                    "type": "string",
                    "default": "es5"
                },
                "prettier.arrowParens": {
                    "type": "string",
                    "deafult": "always"
                },
                "javascript.updateImportsOnFileMove.enabled": {
                    "type": "string",
                    "default": "never"
                }
            }
        }
    }
}
